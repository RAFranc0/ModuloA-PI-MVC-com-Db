@model EventoViewModel

@{
    ViewData["Title"] = "Confirmar Exclus√£o";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja excluir este pacote?</h3>

<div>
    <h4>Pacote</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Titulo
            </dt>
            <dd class="col-sm-10">
                @Model.Titulo
            </dd>
            <dt class="col-sm-2">
                Descricao
            </dt>
            <dd class="col-sm-10">
                @Model.Descricao
            </dd>
            <dt class="col-sm-2">
                Data
            </dt>
            <dd class="col-sm-10">
                @Model.Data.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Horario
            </dt>
            <dd class="col-sm-10">
                @Model.Horario.ToString("HH:mm")
            </dd>
            <dt class="col-sm-2">
                Local
            </dt>
            <dd class="col-sm-10">
                @Model.Local
            </dd>
        </dl>
    </div>

    <form asp-action="Excluir" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="ExcluirPacotes" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

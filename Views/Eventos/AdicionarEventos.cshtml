@model EventoViewModel

@{
    ViewData["Title"] = "Adicionar Pacote";
}



<div class="container d-flex flex-column justify-content-center align-items-center">
    <h1>@ViewData["Title"]</h1>

    <div class="w-50">
        <form asp-action="Adicionar" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" type="date" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" type="time" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="UsuarioId" value="1" />

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Adicionar</button>
                <a class="btn btn-secondary" asp-action="PainelUsuario" asp-controller="Home">Voltar</a>
            </div>
        </form>
    </div>
</div>



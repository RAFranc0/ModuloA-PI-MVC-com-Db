@model UsuarioViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<div class="container text-center d-flex flex-column justify-content-center align-items-center">
    <div class="mb-4">
        <h2>Musica Em Ação</h2>
        <h5>Cadastro de Usuários</h5>
        <span class="text-danger fs-5">Necessário estar logado como admin!</span>
    </div>
    <form asp-action="Create" asp-controller="Cadastro">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" class="form-control" required />
        </div>
        <div class="mt-2">
            <button type="button" class="btn btn-secondary" onclick="window.location.href = '/Home/Login'">Voltar</button>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>
